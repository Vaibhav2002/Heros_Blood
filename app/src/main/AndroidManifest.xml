<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nishant.herosblood">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/SplashScreenTheme">
        <activity
            android:name=".ui.DonorListActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/ScreenTheme" />
        <activity
            android:name=".ui.EditUserProfileActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".ui.DonorProfileActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".ui.UserRegistrationActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".ui.UserProfileActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".ui.UserDashboardActivity"
            android:theme="@style/FullScreenTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".ui.SignUpActivity"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/FullScreenTheme" />
        <activity android:name=".ui.IntroScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>